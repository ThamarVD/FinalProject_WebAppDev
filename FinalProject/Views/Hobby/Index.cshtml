@model List<Hobby>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="d-flex justify-content-between align-items-center">
    <h2>Hobbies</h2>
    <a href="/hobby/add" class="btn-outline-primary btn-sm text-decoration-none">+</a>
</div>

<div class="flex-column">
    @foreach (Hobby hobby in Model)
    {
        <a href="/hobby/view/@hobby.Id" class="text-decoration-none">
            <div class="shadow-lg bg-white rounded p-2 border border-dark border-2 mb-3">
                <h4 class="text-xl font-bold mb-0">@hobby.Name</h4>
                <p class="mb-0 text-black">@hobby.Description</p>
            </div>
        </a>
    }
</div>